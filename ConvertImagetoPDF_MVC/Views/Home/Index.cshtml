@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <div class="col-md-12">
        <h2>Image convert to PDF using Itextsharp</h2>
        @using (Html.BeginForm("Index1", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="col-md-4">
                    <input type="file" name="files" class="form-control" />
                </div>
                <div class="col-md-8">
                    <input type="submit" id="btnSubmit" value="Convert" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
</div>